{
  "name": "justjava-api",
  "version": "1.5.2",
  "description": "Backend for JustJava, a sample food delivery application for a coffee shop.",
  "author": "Mark Njung'e",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "rimraf dist && yarn build",
    "start:prod": "node dist/main",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docs": "npx compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.8.5",
    "@nestjs/common": "^7.6.12",
    "@nestjs/core": "^7.6.12",
    "@nestjs/platform-fastify": "^7.6.12",
    "@nestjs/swagger": "^4.7.13",
    "@nestjs/typeorm": "^7.1.5",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "bull": "^3.20.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "config": "^3.3.3",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "fastify-helmet": "^5.2.0",
    "fastify-multipart": "^4.0.5",
    "fastify-rate-limit": "^5.2.0",
    "fastify-swagger": "^4.3.1",
    "filesize": "^6.3.0",
    "firebase-admin": "^9.5.0",
    "flat": "^5.0.2",
    "google-auth-library": "^7.0.2",
    "ioredis": "^4.22.0",
    "node-forge": "^0.10.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "shortid": "^2.2.16",
    "slugify": "^1.4.6",
    "typeorm": "^0.2.31",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@marknjunge/eslint-config": "^1.6.0",
    "@nestjs/cli": "^7.5.5",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.12",
    "@types/bull": "^3.15.0",
    "@types/flat": "^5.0.1",
    "@types/ioredis": "^4.19.4",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
