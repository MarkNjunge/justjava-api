{
  "name": "justjava-api",
  "version": "1.1.1",
  "description": "Backend for JustJava, a sample food delivery application for a coffee shop.",
  "author": "Mark Njung'e",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn build",
    "start:prod": "node dist/main.js",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:no-fix": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docs": "npx compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.5",
    "@nestjs/core": "^7.0.5",
    "@nestjs/platform-fastify": "^7.0.5",
    "@nestjs/swagger": "^4.5.1",
    "@nestjs/typeorm": "^7.0.0",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.2",
    "class-validator": "^0.9.1",
    "cloudinary": "^1.16.0",
    "config": "^3.1.0",
    "dotenv": "^8.0.0",
    "fastify-file-upload": "^2.0.1",
    "fastify-rate-limit": "^2.2.0",
    "fastify-swagger": "^2.5.0",
    "firebase-admin": "^8.8.0",
    "google-auth-library": "^5.5.1",
    "ioredis": "^4.14.1",
    "moment": "^2.24.0",
    "node-forge": "^0.9.1",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "shortid": "^2.2.15",
    "slugify": "^1.3.5",
    "typeorm": "^0.2.20",
    "winston": "^3.2.1",
    "winston-transport": "^4.3.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.10",
    "@nestjs/testing": "^6.0.0",
    "@types/ioredis": "^4.0.19",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^2.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^2.0.2",
    "supertest": "^3.4.1",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
